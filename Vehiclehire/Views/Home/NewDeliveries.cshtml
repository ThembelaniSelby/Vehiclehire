@model IEnumerable<Vehiclehire.Models.Delivery>

@{
    ViewBag.Title = "New Deliveries";
}

<h2>New Deliveries</h2>


<table class="table">
    <tr>
        <th>
            Booking Id
        </th>
        
        <th>
            Driver
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            Pick Up Time
        </th>
        <th>
            Pick Up Address
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.DriverName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickUpTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickUpAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
       
        <td>
            <a href="/account/confirmdelivery?id=@item.Id" class="btn btn-success">DELIVER VEHICLE</a>

            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
