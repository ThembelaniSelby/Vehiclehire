@model Vehiclehire.Models.BookingVM

@{
    ViewBag.Title = "allocate";
}

<h2>APPROVE BOOKING</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


       

        <div class="form-group">
            @Html.LabelFor(model => model.InspectionDate, "Inspection Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.InspectionDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InspectionDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServicingDate, "Servicing Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ServicingDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServicingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <label class="control-label col-md-2" for="HasSidebar">Contractor</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Constractor, Model.Constractors, "Select Contractor", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Constractor, "", new { @class = "text-danger" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="APPROVE BOOKING" class="btn btn-info" />
            </div>
        </div>
    </div>
}

